<div class="h-screen flex items-center justify-center bg-purple-300">
  <div class="w-[40vw] mx-auto bg-white p-16 rounded-lg shadow-md">
    <h2 class="font-bold text-2xl text-gray-700">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'flex flex-col items-center justify-center'}) do |f| %>
      <div class="w-full mb-3">
        <%= f.label :email, class: 'text-gray-700'%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full rounded-md border-purple-200 text-gray-700 focus:border-purple-700 focus:outline-none' %>
      </div>

      <div class="w-full mb-6">
        <%= f.label :password, class: 'text-gray-700' %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-full rounded-md border-purple-200 text-gray-700 focus:border-purple-700 focus:outline-none' %>
      </div>

      <button class="border rounded-md border-purple-200 text-gray-700 hover:border-transparent hover:bg-purple-600 hover:text-white active:bg-purple-700 py-1 w-full mb-3">
        <%= f.submit "Log in" %>
      </button>

      <% if devise_mapping.rememberable? %>
        <div class="w-full mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me,  class: 'text-gray-700' %>
        </div>
      <% end %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>